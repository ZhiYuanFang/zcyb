<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_collection"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lab_detalis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/lab_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：2016110402500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【详情】"
                android:textColor="#F7762E" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额：" />

            <TextView
                android:id="@+id/lab_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥172.00元："
                android:textColor="#ff0400" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间：2016-11-04 13:11:50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未确认,未付款,未发货"
                android:textColor="#F7762E" />
        </LinearLayout>
    </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/settinggoto"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#F7762E"
        android:text="取消订单"
        android:textColor="#ffffff" />


</LinearLayout>
