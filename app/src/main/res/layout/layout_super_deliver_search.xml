<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/layout_title"
        android:layout_centerVertical="true"
        android:background="@color/SuperDeliverGJColor">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_pressed_angle_gradule_red"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/tv_White">

        </TextView>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@+id/tv_search"
            android:background="@drawable/bg_circle_solid_white"
            android:drawablePadding="@dimen/OnepurchaseDrawpadding"
            android:ems="10"
            android:hint="请输入商品名称、关键字"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/et_search"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@android:drawable/presence_offline"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>