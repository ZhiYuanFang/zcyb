<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_White"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView147"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/bg_hasOK"
        android:gravity="center"
        android:text="填写淘宝订单号"
        android:textColor="@color/tv_White" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
        android:padding="@dimen/OnepurchaseIndexSmallPadding">

        <TextView
            android:id="@+id/textView148"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="商品名称：" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
            android:layout_toEndOf="@+id/textView148"
            android:singleLine="true"
            android:text="@string/locationInfo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
        android:padding="@dimen/OnepurchaseIndexSmallPadding">

        <TextView
            android:id="@+id/textView158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="下单价：" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
            android:layout_toEndOf="@+id/textView158"
            android:singleLine="true"
            android:text="￥899.00"
            android:textColor="@color/tv_Red" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
        android:padding="@dimen/OnepurchaseIndexSmallPadding">

        <TextView
            android:id="@+id/textView159"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="订单编号：" />

        <EditText
            android:id="@+id/et_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView159"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="number"
            android:padding="@dimen/OnepurchaseIndexSmallPadding" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView162"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="---------------------"
            android:textColor="@color/tv_Red" />

        <TextView
            android:id="@+id/textView161"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="请注意一下事项"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView160"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="---------------------"
            android:textColor="@color/tv_Red" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_promot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
        android:padding="@dimen/OnepurchaseIndexSmallPadding"
        android:text="@string/locationInfo"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingStart="14dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:layout_weight="0.8"
            android:background="@drawable/angel_border_selected"
            android:gravity="center"
            android:padding="@dimen/OnpurchaseMarginLeftRight"
            android:text="确认"
            android:textColor="@color/tv_White" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:layout_weight="1.2"
            android:background="@drawable/angel_border_search_bg_gray"
            android:gravity="center"
            android:padding="@dimen/OnpurchaseMarginLeftRight"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>