<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/headimg" />

    <ImageView
        android:id="@+id/img_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/img_head"
        android:background="@drawable/bg_circle_solid_gray" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/img_dot"
        android:layout_toStartOf="@+id/layout_detail"
        android:text="132****5487" />

    <RelativeLayout
        android:id="@+id/layout_detail"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/detail_light_cart" />
    </RelativeLayout>

</RelativeLayout>