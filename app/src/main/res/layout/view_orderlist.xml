<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_collection"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <LinearLayout
                android:id="@+id/lab_dianji"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:tag="0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp">

                    <TextView
                        android:id="@+id/lab_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号：2016110870850" />

                    <TextView
                        android:id="@+id/lab_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【详情】"
                        android:textColor="#F7762E" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总金额：" />

                    <TextView
                        android:id="@+id/lab_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥406"
                        android:textColor="#ff0400" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应付金额：" />

                    <TextView
                        android:id="@+id/lab_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥406"
                        android:textColor="#ff0400" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lab_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="下单时间：2016-11-08 16:47" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/settinggoto" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lab_state"
                android:layout_weight="1"
                android:textColor="@color/tv_Red"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
