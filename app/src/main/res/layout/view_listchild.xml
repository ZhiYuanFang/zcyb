<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/main_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:tag="0"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/img_view1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ffffff"></RelativeLayout>

        <TextView
            android:id="@+id/lab_money1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2px"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="价格"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lab_name1"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="名称"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:tag="1"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/img_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ffffff"></RelativeLayout>

        <TextView
            android:id="@+id/lab_money2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2px"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="价格"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lab_name2"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="名称"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

