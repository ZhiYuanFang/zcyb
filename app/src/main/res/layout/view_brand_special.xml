<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/textView270"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center"
            android:text="品牌特惠"
            android:textColor="@color/tv_Red"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView58"
                android:layout_width="@dimen/SuperDeliverBackDrawableHeight"
                android:layout_height="@dimen/SuperDeliverBackDrawableHeight"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/super_deliver_back" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e9e9e9"
            android:dividerHeight="10dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/touchLayout"
            android:layout_width="@dimen/TouchLayoutWidth"
            android:layout_height="match_parent">

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>