<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/OnepurchaseIndexSmallPadding">

    <RelativeLayout
        android:id="@+id/layout_shop_name"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/ib_goto_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/goto_shop" />

        <CheckBox
            android:id="@+id/check_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/btn_input"
            android:text="子成100自营店(共7件)"
            android:textColor="@color/tv_nomal" />

    </RelativeLayout>

    <com.wzzc.other_view.extendView.ExtendListView
        android:id="@+id/production_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/OnepurchaseIndexSmallPadding"></com.wzzc.other_view.extendView.ExtendListView>
</LinearLayout>