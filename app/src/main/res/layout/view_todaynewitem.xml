<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/textView153"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/tv_line" />

        <TextView
            android:id="@+id/textView155"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/tv_line" />

        <TextView
            android:id="@+id/textView156"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/tv_line" />

        <TextView
            android:id="@+id/textView157"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/tv_line" />

        <com.wzzc.other_view.extendView.ExtendImageView
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView157"
            android:layout_below="@+id/textView155"
            android:layout_toEndOf="@+id/textView153"
            android:layout_toStartOf="@+id/textView156">

        </com.wzzc.other_view.extendView.ExtendImageView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:maxLines="3"
            android:text="简约纯色进门地点结识耐脏地毯"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <TextView
                android:id="@+id/textView142"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_red"
                android:gravity="center"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:text="返后价"
                android:textColor="@color/tv_Red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_toEndOf="@+id/textView142"
                android:gravity="center"
                android:text="￥50"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/tv_Red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_backMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:text="返现50元"
                android:textColor="@color/aqua" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>