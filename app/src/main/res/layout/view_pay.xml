<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contain_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_paySelect"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:id="@+id/radio_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="1" />

                <RadioButton
                    android:id="@+id/radio_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="3" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/radioGroup2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/OnepurchaseIndexSmallPadding">

                    <com.wzzc.other_view.extendView.ExtendImageView
                        android:id="@+id/eiv_zfb"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                        android:background="@drawable/zhifuimage1" />

                    <TextView
                        android:id="@+id/tv_zfb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/OnepurchaseDrawpadding"
                        android:gravity="center_vertical"
                        android:text="支付宝支付"
                        android:textColor="@color/tv_Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/OnepurchaseIndexSmallPadding">

                    <com.wzzc.other_view.extendView.ExtendImageView
                        android:id="@+id/eiv_wx"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                        android:background="@drawable/zhifuimage2" />

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/OnepurchaseDrawpadding"
                        android:gravity="center_vertical"
                        android:text="微信支付"
                        android:textColor="@color/tv_Black" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>