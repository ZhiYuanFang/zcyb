<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_White"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView77"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="19dp"
        android:paddingRight="19dp">

        <LinearLayout
            android:id="@+id/lab_details"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.wzzc.other_view.extendView.ExtendImageView
                android:id="@+id/img_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="温州子成"
                    android:textColor="@color/tv_Black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text=" 共300件宝贝"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/lab_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="4dp"
                        android:singleLine="true"
                        android:text="3km"
                        android:textColor="@color/tv_Red"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_shop"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/come_in_shop"
                android:gravity="center"
                android:orientation="horizontal"
                android:tag="2">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝贝描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":5.0"
                    android:textColor="#DD2726" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DD2726"
                    android:text="高"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝贝描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":5.0"
                    android:textColor="#DD2726" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DD2726"
                    android:text="高"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝贝描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":5.0"
                    android:textColor="#DD2726" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DD2726"
                    android:text="高"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <com.wzzc.other_view.extendView.ExtendListView
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcf7f7"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:visibility="gone"></com.wzzc.other_view.extendView.ExtendListView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView72"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:background="@color/tv_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <LinearLayout
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="0">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="1.5dp"
                android:src="@drawable/callphone" />

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1.5dp"
                android:text="联系客服"
                android:textColor="@color/tv_Gray"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView71"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/tv_line" />

        <LinearLayout
            android:id="@+id/btn_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="1">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_marginEnd="1.5dp"
                android:src="@drawable/loc_icon" />

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1.5dp"
                android:text="到这里去"
                android:textColor="@color/tv_Gray"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView74"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_line" />

</LinearLayout>
