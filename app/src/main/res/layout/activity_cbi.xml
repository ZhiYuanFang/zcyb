<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wzzc.other_view.BasicTitleView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/basicTitleView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="C米提现" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/basicTitleView12"
        android:orientation="vertical"
        android:padding="@dimen/OnepurchaseIndexSmallPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:background="@color/azure"
            android:orientation="horizontal"
            android:padding="@dimen/OnepurchaseIndexSmallPadding">

            <TextView
                android:id="@+id/textView190"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:text="当前C米余额：" />

            <TextView
                android:id="@+id/tv_cbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="￥2.70"
                android:textColor="@color/tv_Red"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:orientation="horizontal"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView189"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:text="提现数额：" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1.3"
                android:background="@drawable/bg_collection"
                android:hint="(必填)提现数额"
                android:inputType="number"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView182"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tv_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:orientation="horizontal"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView191"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:text="会员备注：" />

            <EditText
                android:id="@+id/et_notes"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1.3"
                android:background="@drawable/bg_collection"
                android:gravity="start"
                android:hint="(选填)输入备注"
                android:padding="@dimen/OnepurchaseIndexSmallPadding"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:text="(*满100才可以提现,首次提现请在会员资料里面填写工商银行卡信息,提现后会在1-5个工作日内予以付款)"
            android:textColor="@color/tv_Red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/OnpurchaseMarginLeftRight"
            android:orientation="horizontal"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/OnepurchaseIndexSmallPadding">

                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/angel_border_selected"
                    android:gravity="center"
                    android:padding="@dimen/OnpurchaseMarginLeftRight"
                    android:text="重置表单"
                    android:textColor="@color/tv_White" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/OnepurchaseIndexSmallPadding">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/angel_border_selected"
                    android:gravity="center"
                    android:padding="@dimen/OnpurchaseMarginLeftRight"
                    android:text="提交申请"
                    android:textColor="@color/tv_White" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/touchLayout"
        android:layout_width="@dimen/TouchLayoutWidth"
        android:layout_height="match_parent"
        android:layout_below="@+id/basicTitleView12">

    </RelativeLayout>
</RelativeLayout>