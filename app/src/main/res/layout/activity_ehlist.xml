<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.wzzc.other_view.BasicTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lab_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="1"
            android:text="上市"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="44dp"
            android:layout_marginTop="-13dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/lab_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="2"
            android:text="价格"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="44dp"
            android:layout_marginTop="-13dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/lab_Popularity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="3"
            android:text="人气"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="没有数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_centerInParent="true" />

        <com.wzzc.other_view.extendView.ExtendListView
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcf7f7"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:scrollbars="none"></com.wzzc.other_view.extendView.ExtendListView>
    </RelativeLayout>

</LinearLayout>