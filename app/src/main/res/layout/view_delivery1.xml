<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lab_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:singleLine="true"
            android:text="--"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:singleLine="true"
            android:text="--"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lab_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:padding="@dimen/OnepurchaseIndexSmallPadding"
            android:singleLine="true"
            android:text="--"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
        android:paddingEnd="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingLeft="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingRight="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingStart="@dimen/OnepurchaseIndexSmallPadding"
        android:textSize="12sp" />

</LinearLayout>
