<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/OnpurchaseMarginLeftRight"
    android:paddingLeft="@dimen/OnpurchaseMarginLeftRight"
    android:paddingRight="@dimen/OnpurchaseMarginLeftRight"
    android:paddingStart="@dimen/OnpurchaseMarginLeftRight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的当前余额0.00元" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ten"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_circle_red"
                android:gravity="center"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:tag="0"
                android:text="10元" />

            <TextView
                android:id="@+id/tv_twn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_angle_line"
                android:gravity="center"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:text="20元" />

            <TextView
                android:id="@+id/tv_thirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_angle_line"
                android:gravity="center"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:text="30元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_hun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_angle_line"
                android:gravity="center"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:text="100元" />

            <TextView
                android:id="@+id/tv_tun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_angle_line"
                android:gravity="center"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:text="200元" />

            <EditText
                android:id="@+id/et_other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginEnd="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginLeft="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginRight="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginStart="@dimen/OnpurchaseMarginLeftRight"
                android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
                android:layout_weight="1"
                android:background="@drawable/bg_angle_line"
                android:ems="10"
                android:gravity="center"
                android:hint="输入金额/元"
                android:inputType="number"
                android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
                android:paddingTop="@dimen/OnpurchaseMarginLeftRight"
                android:textColorHint="@color/tv_Gray"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择平台充值10元" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView106"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
        android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
        android:background="@color/tv_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
        android:orientation="vertical"
        android:paddingEnd="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingLeft="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingRight="@dimen/OnepurchaseIndexSmallPadding"
        android:paddingStart="@dimen/OnepurchaseIndexSmallPadding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
            android:paddingEnd="@dimen/OnepurchaseIndexSmallPadding"
            android:paddingLeft="@dimen/OnepurchaseIndexSmallPadding"
            android:paddingRight="@dimen/OnepurchaseIndexSmallPadding"
            android:paddingStart="@dimen/OnepurchaseIndexSmallPadding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/OnepurchaseDrawpadding"
                    android:gravity="center_vertical"
                    android:text="微信支付" />

                <TextView
                    android:id="@+id/tv_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/OnepurchaseDrawpadding"
                    android:gravity="center_vertical"
                    android:text="支付宝支付" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <RadioButton
                    android:id="@+id/radio_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="1" />

                <RadioButton
                    android:id="@+id/radio_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="3" />
            </RadioGroup>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView109"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/OnpurchaseMarginLeftRight"
            android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
            android:background="@color/tv_line"
            android:paddingBottom="@dimen/OnpurchaseMarginLeftRight"
            android:paddingTop="@dimen/OnpurchaseMarginLeftRight" />

        <TextView
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/OnpurchaseMarginLeftRight"
            android:background="@drawable/angel_border_selected"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="确认充值"
            android:textColor="@color/tv_White" />

    </LinearLayout>

</LinearLayout>