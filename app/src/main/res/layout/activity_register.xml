<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <com.wzzc.other_view.BasicTitleView
        android:id="@+id/basicTitleView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/basicTitleView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="手机号"
                        android:textSize="18sp"
                        android:textColor="@color/tv_Black" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:hint="请输入手机号"
                        android:padding="@dimen/OnepurchaseIndexSmallPadding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:id="@+id/textView9"
                    android:background="@color/darkgray"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="密码"
                        android:textSize="18sp"
                        android:textColor="@color/tv_Black" />

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:hint="请输入6至20位字符"
                        android:inputType="textPassword"
                        android:padding="@dimen/OnepurchaseIndexSmallPadding" />

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lab_nodisplay"
                            android:layout_width="28dp"
                            android:layout_height="26dp"
                            android:src="@drawable/input_eye_off"
                            android:tag="0" />
                        <!--<ImageView-->
                        <!--android:id="@+id/lab_display"-->
                        <!--android:tag="1"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_width="36dp"-->
                        <!--android:layout_height="36dp"-->
                        <!--android:src="@drawable/input_eye_on" />-->
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:id="@+id/textView10"
                    android:background="@color/darkgray"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/lab_dpid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="店铺ID号"
                        android:textColor="@color/tv_Black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_dpid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:hint="注册时所在店铺ID号"
                        android:padding="@dimen/OnepurchaseIndexSmallPadding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dpid_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgray"
                    android:text="TextView"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:text="邀请码:"
                        android:textColor="@color/tv_Black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:hint="(选填)邀请码"
                        android:padding="@dimen/OnepurchaseIndexSmallPadding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:id="@+id/tv_code_line"
                    android:background="@color/darkgray"
                    android:layout_height="1dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.4"
                        android:text="验证码"
                        android:textSize="18sp"
                        android:textColor="@color/tv_Black" />

                    <EditText
                        android:id="@+id/edit_message"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_edittext"
                        android:hint="短信验证码"
                        android:padding="@dimen/OnepurchaseIndexSmallPadding" />

                    <Button
                        android:id="@+id/btn_obtain"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_zhuce"
                        android:text="获取验证码 "
                        android:textColor="#be3233"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:id="@+id/textView12"
                    android:background="@color/darkgray"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="5px"
                    android:paddingRight="5dp">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text=" 我已看过并接受《"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lab_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户协议"
                        android:textColor="#0000ff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="》"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/SuperDeliverMoreButtonHeight"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_iszhuce"
                    android:gravity="center"
                    android:text="注 册"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/SuperDeliverMoreButtonHeight"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_denglu"
                    android:gravity="center"
                    android:text="已有账号点击登陆"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/touchLayout"
        android:layout_width="@dimen/TouchLayoutWidth"
        android:layout_height="match_parent"
        android:layout_below="@+id/basicTitleView2">

    </RelativeLayout>

</RelativeLayout>
