<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_pressed_normal"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/cart_shop_icon"
        android:paddingBottom="17dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:text="商城自营店( 共 1 件 ) " />

    <TextView
        android:id="@+id/textView224"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_line" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp" />

    <RelativeLayout
        android:id="@+id/layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="21dp"
        android:paddingTop="21dp">

        <TextView
            android:id="@+id/textView238"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/tv_money"
            android:text="共计"
            android:textColor="@color/tv_Black" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="￥376.00"
            android:textColor="@color/tv_Red" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/textView238"
            android:text="共3件商品"
            android:textColor="@color/tv_Black" />
    </RelativeLayout>
</LinearLayout>